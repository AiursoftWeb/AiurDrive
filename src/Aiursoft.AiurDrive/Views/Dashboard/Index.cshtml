@model Aiursoft.AiurDrive.Models.DashboardViewModels.IndexViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@Localizer["Dashboard"]</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a asp-controller="Dashboard" asp-action="CreateSite" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-plus"></i> @Localizer["Create New Site"]
            </a>
        </div>
    </div>

    <div class="row">
        @if (!Model.Sites.Any())
        {
            <div class="col-12 text-center mt-5">
                <h3>@Localizer["You don't have any sites yet."]</h3>
                <a asp-controller="Dashboard" asp-action="CreateSite" class="btn btn-primary mt-3">@Localizer["Create Your First Site"]</a>
            </div>
        }
        else
        {
            @foreach (var site in Model.Sites)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@site.SiteName</h5>
                            <p class="card-text text-muted">@Localizer["Created at"]: @site.CreationTime.ToLocalTime()</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a asp-controller="Dashboard" asp-action="Files" asp-route-siteName="@site.SiteName" class="btn btn-sm btn-outline-primary">@Localizer["Manage"]</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
