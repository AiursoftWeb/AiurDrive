@model Aiursoft.AiurDrive.Models.DashboardViewModels.IndexViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@Localizer["Dashboard"]</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <span class="text-muted">
                <i class="fas fa-layer-group me-1"></i>
                @Localizer["Sites"]: @Model.CurrentSitesCount / @Model.MaxSites
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            @if (Model.CurrentSitesCount < Model.MaxSites)
            {
                <a asp-controller="Dashboard" asp-action="CreateSite" class="text-decoration-none">
                    <div class="card h-100 border-dashed shadow-none text-center d-flex justify-content-center align-items-center site-create-card" style="border-style: dashed; border-width: 2px; min-height: 200px;">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <i class="fas fa-plus fa-3x text-muted mb-3"></i>
                            <h5 class="card-title text-muted">@Localizer["Create New Site"]</h5>
                        </div>
                    </div>
                </a>
            }
            else
            {
                <div class="card h-100 border-dashed shadow-none text-center d-flex justify-content-center align-items-center" style="border-style: dashed; border-width: 2px; min-height: 200px; opacity: 0.6; cursor: not-allowed;" title="@Localizer["You have reached the maximum number of sites."] (@Model.MaxSites)">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-ban fa-3x text-danger mb-3"></i>
                        <h5 class="card-title text-muted">@Localizer["Limit Reached"]</h5>
                        <p class="small text-muted mb-0">@Model.MaxSites @Localizer["sites max"]</p>
                    </div>
                </div>
            }
        </div>

        @if (Model.Sites.Any())
        {
            @foreach (var site in Model.Sites)
            {
                <div class="col-md-3 mb-3">
                    <div class="card h-100 site-card">
                        <a asp-controller="Dashboard" asp-action="Files" asp-route-siteName="@site.SiteName" class="text-decoration-none text-reset stretched-link">
                            <div class="card-body">
                                <h5 class="card-title">@site.SiteName</h5>
                                <p class="card-text text-muted">@Localizer["Created at"]: @site.CreationTime.ToLocalTime()</p>
                                <p class="card-text">
                                    @if (site.AllowAnonymousView)
                                    {
                                        <span class="badge bg-success">@Localizer["Public"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Localizer["Private"]</span>
                                    }
                                </p>
                            </div>
                        </a>
                        <div class="card-footer bg-transparent border-top-0 d-flex justify-content-end align-items-center">
                            <a asp-controller="Dashboard" asp-action="DeleteSite" asp-route-siteName="@site.SiteName" class="text-danger position-relative z-index-2" title="@Localizer["Delete Site"]" style="z-index: 2;">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@* ReSharper disable once Razor.SectionNotResolved *@
@section styles {
    <style>
        .site-card, .site-create-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .site-card:hover, .site-create-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
}
