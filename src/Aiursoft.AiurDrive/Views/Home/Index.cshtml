@using Aiursoft.AiurDrive
@using Microsoft.Extensions.Options
@model Aiursoft.AiurDrive.Models.HomeViewModels.IndexViewModel
@inject IOptions<AiFeaturesSettings> aiFeatures
@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron">
    <div class="container">
        <h3>Welcome to Aiursoft AiurDrive</h3>
        <p>AiurDrive is a free file sharing service. You can upload your files here and share them with others.</p>
        <div class="btn-group" role="group">
            <a class="btn btn-primary btn-lg" href="#" role="button">
                <i class="fas fa-pencil-alt"></i>
                Sign in to your personal storage
            </a>
        </div>
    </div>
</div>
<main role="main" class="container">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>Try it now! Upload your file here to share it!</h3>
            <div>
                <input type="file" id="main-file-file-input" class="dropify" data-max-file-size="2000M"/>
                <input type="hidden" name="main-file" id="main-file" value=""/>
                <div id="progress-main-file" class="progress mb-3 mt-3 d-none">
                    <div id="progressbar-main-file" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"></div>
                </div>

                <div class="mt-2">
                    @* <a class="btn btn-success" href="#"> *@
                    @*     <i class="fa fa-upload"></i> *@
                    @*     Sign in to enjoy 2GB max file size! *@
                    @* </a> *@
                    <a id="copyButton" class="btn btn-warning text-white" data-toggle="tooltip" data-original-title="copied!" data-trigger="click" data-clipboard-target="#main-file" data-clipboard-action="copy">Copy Link</a>
                    <a id="openButton" class="btn btn-primary" href="#" target="_blank">Open in new page</a>
                    <a id="upscaleButton" class="btn btn-secondary" target="_blank">Upscale the image</a>
                    <a id="codeButton" class="btn btn-primary ml-2" data-toggle="modal" data-target="#qr-modal">QR Code</a>
                </div>

                <div id="progress-main-upscale" class="progress mb-3 mt-3 d-none">
                    <div id="progressbar-main-upscale" class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: 100%"></div>
                </div>
            </div>
            <label class="w-100 mt-3 mb-0">
                By uploading, you agree that your file will be public and can be downloaded by anyone.
            </label>
        </div>
    </div>
</main>

<div class="modal fade" id="qr-modal" tabindex="-1" role="dialog" aria-labelledby="qrModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR Code</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img class="img-fluid" id="qr-img" src="/qrcode-build" alt="qr code"/>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@if (aiFeatures.Value.HyperScaling)
{
    <div class="modal fade" id="upscaled-modal" tabindex="-1" role="dialog" aria-labelledby="upscaledModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Up scale image</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <a href="#" id="upscale-img-link" target="_blank">
                        <img class="img-fluid" id="upscale-img" src="/favicon.ico" alt="qr code"/>
                    </a>
                    @* <img class="img-fluid" id="upscale-img" src="/favicon.ico" alt="qr code"/> *@
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

