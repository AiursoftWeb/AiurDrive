@section scripts{
    <script>
        new ClipboardJS('#copyButton');
    </script>
    <script type="module">
        import Uploader from "/scripts/uploader.js";

        const aiFeaturesEnabled = @aiFeatures.Value.HyperScaling.ToString().ToLower();
        const copyButton = $('#copyButton');
        const openButton = $('#openButton');
        const codeButton = $('#codeButton');
        const upscaleButton = $('#upscaleButton');
        const qrImage = $('#qr-img');
        const upscaleImage = $('#upscale-img');
        const upscaleLink = $('#upscale-img-link');
        const updateButtons = function () {
            const downloadPath = $("[name=main-file]").attr('value');
            const relativePath = downloadPath.split('/').slice(4).join('/');

            if (downloadPath && downloadPath.length > 0) {
                copyButton.show();
                openButton.show();
                codeButton.show();
                openButton.attr('href', downloadPath);
                qrImage.attr('src', '/download/qrcode?path=' + encodeURIComponent(downloadPath));

                // if the file is an image, show the upscale button.
                if (
                    downloadPath.toLowerCase().endsWith('.png') ||
                    downloadPath.toLowerCase().endsWith('.bmp') ||
                    downloadPath.toLowerCase().endsWith('.jpg') ||
                    downloadPath.toLowerCase().endsWith('.jpeg')) {

                    if (aiFeaturesEnabled) {
                        upscaleButton.show();
                    }

                    const progress = $(`#progress-main-upscale`);

                    // If clicked upscale button, call the upscale API.
                    // Clear existing events for upscale button.
                    upscaleButton.off('click');
                    upscaleButton.click(function () {
                        // Disable the button to prevent multiple clicks.
                        upscaleButton.addClass('disabled');
                        upscaleButton.text('Upscaling...(ETA 30s)');

                        // Show progress with unknown progress:
                        progress.removeClass('d-none');
                        $.ajax({
                            url: '/upscale/' + relativePath,
                            type: 'GET',
                            success: function (data) {
                                console.log(data);
                                upscaleImage.attr('src', data);
                                upscaleLink.attr('href', data);
                                progress.addClass('d-none');
                                upscaleButton.removeClass('disabled');
                                upscaleButton.text('Upscale the image');
                                $('#upscaled-modal').modal('show');
                            },
                            error: function (jqXHR, textStatus, errorThrown) {
                                console.error("Error during upscaling: ", textStatus, errorThrown);
                                console.error("Response body: ", jqXHR.responseText);
                                progress.addClass('d-none');
                                upscaleButton.removeClass('disabled');
                                upscaleButton.text('Upscale the image');
                                alert("Failed to upscale the image. " + jqXHR.responseText);
                            }
                        });
                    });
                } else {
                    upscaleButton.hide();
                }
            } else {
                copyButton.hide();
                openButton.hide();
                codeButton.hide();
                upscaleButton.hide();
                upscaleButton.on('click', function () {
                    alert('Please upload a image file to use this feature.');
                });
            }
        };
        updateButtons();

        const fileInput = $(`#main-file-file-input`);
        const progress = $(`#progress-main-file`);
        const progressbar = $(`#progressbar-main-file`);
        const addressInput = $(`[name=main-file]`);

        new Uploader({
            fileInput: fileInput,
            progress: progress,
            progressbar: progressbar,
            addressInput: addressInput,
            sizeInMb: 2000,
            validExtensions: '',
            uploadUrl: '/upload',
            onUploaded: updateButtons,
            onReset: updateButtons
        }).init();
    </script>
}
