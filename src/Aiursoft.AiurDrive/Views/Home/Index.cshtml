@* ReSharper disable once Razor.SectionNotResolved *@
@section styles {
    <link rel="stylesheet" href="~/styles/site.css" xmlns="http://www.w3.org/1999/html"/>
}

<vc:marketing-navbar></vc:marketing-navbar>

<section class="landing-intro text-bg-dark pt-5 pt-lg-6 pb-5 pb-lg-7">
    <div class="landing-intro-content container h-100">
        <div class="row align-items-center h-100">
            <div class="col-lg-5 mx-auto">
                <span class="badge badge-subtle-primary p-1">@Localizer["Open Source"]</span>
                <span class="badge badge-subtle-primary p-1">@Localizer["Self-Hosted"]</span>
                <span class="badge badge-subtle-primary p-1">@Localizer["MIT Licence"]</span>
                <h1 id="main-slogan" class="my-4 text-white" style="font-size: 3rem;">
                    AiurDrive: <span class='text-primary'>@Localizer["Your Private Cloud"]</span>
                </h1>
                <p class="text-lg text-white-50">
                    @Localizer["A free, flexible file sharing center designed for local deployment."]
                    @Localizer["Take full control of your data with industry-grade security and modern management features."]
                </p>
                <div class="my-4">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg btn-pill">
                        <i class="align-middle" data-lucide="rocket"></i> @Localizer["Get Started"]
                    </a>
                    <a href="https://github.com/AiursoftWeb/AiurDrive" class="btn btn-outline-primary btn-lg btn-pill">
                        <i class="align-middle" data-lucide="github"></i> @Localizer["View on GitHub"]
                    </a>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-flex mx-auto text-center">
                <div class="landing-intro-screenshot">
                    <img src="~/images/screenshot.png" alt="AiurDrive Screenshot" class="img-fluid rounded shadow-lg" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-6">
    <div class="container">
        <div class="mb-5 text-center">
            <span class="text-uppercase text-primary text-sm fw-medium mb-1 d-block">@Localizer["Core Values"]</span>
            <h2 class="h1">@Localizer["Why Choose AiurDrive?"]</h2>
            <p class="text-muted fs-lg">@Localizer["The ultimate solution for personal and enterprise file distribution."]</p>
        </div>

        <div class="row">
            <div class="col-12 col-md-6 col-lg-3 d-flex">
                <div class="card border-0 shadow-none bg-transparent">
                    <div class="card-body p-3">
                        <div class="landing-feature mb-3 text-primary">
                            <i data-lucide="unlock" style="width: 32px; height: 32px;"></i>
                        </div>
                        <h4 class="mt-0">@Localizer["Freedom"]</h4>
                        <p class="text-muted">@Localizer["Fully open-source and MIT licensed. No vendor lock-in, no hidden costs. Your server, your rules."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 d-flex">
                <div class="card border-0 shadow-none bg-transparent">
                    <div class="card-body p-3">
                        <div class="landing-feature mb-3 text-success">
                            <i data-lucide="zap" style="width: 32px; height: 32px;"></i>
                        </div>
                        <h4 class="mt-0">@Localizer["Powerful"]</h4>
                        <p class="text-muted">@Localizer["Physically isolated storage modes (Workspace & Vault), automatic image optimization, and robust path traversal protection."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 d-flex">
                <div class="card border-0 shadow-none bg-transparent">
                    <div class="card-body p-3">
                        <div class="landing-feature mb-3 text-info">
                            <i data-lucide="settings-2" style="width: 32px; height: 32px;"></i>
                        </div>
                        <h4 class="mt-0">@Localizer["Flexible"]</h4>
                        <p class="text-muted">@Localizer["Support for SQLite, MySQL, and SQL Server. Switch between List and Grid views to manage your files comfortably."]</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3 d-flex">
                <div class="card border-0 shadow-none bg-transparent">
                    <div class="card-body p-3">
                        <div class="landing-feature mb-3 text-warning">
                            <i data-lucide="container" style="width: 32px; height: 32px;"></i>
                        </div>
                        <h4 class="mt-0">@Localizer["Easy to Deploy"]</h4>
                        <p class="text-muted">@Localizer["Dockerized architecture means you can get up and running in seconds. Low maintenance, high reliability."]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-6 bg-white border-top border-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="h1 mb-4">@Localizer["Advanced Privacy & Security"]</h2>
                <div class="d-flex mb-3">
                    <div class="me-3 text-primary"><i data-lucide="shield-check"></i></div>
                    <div>
                        <h5>@Localizer["Vault Storage"]</h5>
                        <p class="text-muted">@Localizer["Secure your sensitive documents in an isolated area accessible only via time-limited, cryptographically signed tokens."]</p>
                    </div>
                </div>
                <div class="d-flex mb-3">
                    <div class="me-3 text-primary"><i data-lucide="image"></i></div>
                    <div>
                        <h5>@Localizer["Privacy by Default"]</h5>
                        <p class="text-muted">@Localizer["Automatically clear EXIF metadata from uploaded images to prevent accidental leakage of GPS and device information."]</p>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="me-3 text-primary"><i data-lucide="hard-drive"></i></div>
                    <div>
                        <h5>@Localizer["Quota Management"]</h5>
                        <p class="text-muted">@Localizer["Control storage consumption with global site capacity limits, featuring real-time usage monitoring."]</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <i class="text-primary opacity-10" data-lucide="shield" style="width: 300px; height: 300px;"></i>
            </div>
        </div>
    </div>
</section>

<section class="py-6">
    <div class="container text-center">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-9 col-xl-8 mx-auto">
                <h2 class="h1 mb-3">
                    @Localizer["Ready to own your cloud?"]
                </h2>
                <p class="text-muted fs-lg mb-4">
                    @Localizer["Join thousands of users who trust AiurDrive for their local file management needs."]
                </p>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-pill btn-lg">
                    <i class="align-middle me-1" data-lucide="layout-dashboard"></i>
                    <span>@Localizer["Enter Dashboard"]</span>
                </a>
            </div>
        </div>
    </div>
</section>

<vc:marketing-footer></vc:marketing-footer>
