@model Aiursoft.AiurDrive.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron">
    <div class="container">
        <h3>Welcome to Aiursoft.AiurDrive</h3>
        @{
            var description = "aaaa";
            // try
            // {
            //     description = Assembly.GetExecutingAssembly().GetCustomAttribute<AssemblyDescriptionAttribute>()?.Description;
            // }
            // catch (Exception e)
            // {
            // }
        }
        <p>@description</p>
        <div class="btn-group" role="group">
            <a class="btn btn-primary btn-lg" href="#" role="button">
                <i class="fas fa-pencil-alt"></i>
                Sign in to your personal storage
            </a>
        </div>
    </div>
</div>
<main role="main" class="container">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h2>Try now!</h2>
            <h3 id="uploadTitle">Upload your file here to share it.</h3>
            <div>
                @* <vc:aiur-uploader asp-for="file" site-name="" path="@DateTime.UtcNow.Date.ToString("yyyy-MM-dd")" size-in-mb="@Model.SizeInMB" allowed-extensions="" default-file=""></vc:aiur-uploader> *@
                <div class="mt-2">
                    <a class="btn btn-success" asp-controller="Dashboard" asp-action="Index">
                        <i class="fa fa-upload"></i>
                        Sign in to enjoy 2000MB max file size!
                    </a>
                    <a id="copyButton" class="btn btn-warning text-white" data-toggle="tooltip" data-original-title="copied!" data-trigger="click" data-clipboard-text="error">Copy Link</a>
                    <a id="openButton" class="btn btn-primary" href="#" target="_blank">Open in new page</a>
                    <a id="codeButton" class="btn btn-primary ml-2" data-toggle="modal" data-target="#qr-modal">QR Code</a>
                </div>
            </div>
            <label class="w-100 mt-3 mb-0">
                By uploading, you agree to our terms
            </label>
        </div>
    </div>
</main>

<div class="modal fade" id="qr-modal" tabindex="-1" role="dialog" aria-labelledby="qrModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR Code</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">?</span>
                </button>
            </div>
            <div class="modal-body">
                @*TODO: Developer will be merged to Directory!*@
                <img class="img-fluid" id="qr-img" data-developer="https://developer.aiursoft.com" src="/qrcode-build"/>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section js{
    <script>
        var copyButton = $('#copyButton');
        var openButton = $('#openButton');
        var codeButton = $('#codeButton');
        var qrImage = $('#qr-img');
        var developer = qrImage.attr('data-developer');

        var updateButtons = function () {
            var value = $("[name=file]").attr('data-internet-path');
            if (value && value.length > 0) {
                copyButton.show();
                openButton.show();
                codeButton.show();
                copyButton.attr('data-clipboard-text', value);
                openButton.attr('href', value);
                qrImage.attr('src', developer + '/qrcode-build?source=' + encodeURI(value));
            } else {
                copyButton.hide();
                openButton.hide();
                codeButton.hide();
            }
        };

        var loopRenderJobs = function () {
            updateButtons();
            setTimeout(loopRenderJobs, 100);
        };
        loopRenderJobs();
    </script>
}
