@model Aiursoft.AiurDrive.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron">
    <div class="container">
        <h3>Welcome to Aiursoft AiurDrive</h3>
        <p>AiurDrive is a free file sharing service. You can upload your files here and share them with others.</p>
        <div class="btn-group" role="group">
            <a class="btn btn-primary btn-lg" href="#" role="button">
                <i class="fas fa-pencil-alt"></i>
                Sign in to your personal storage
            </a>
        </div>
    </div>
</div>
<main role="main" class="container">
    <div class="row">
        <div class="col-md-12 mt-5">
            <h3>Try it now! Upload your file here to share it!</h3>
            <div>
                <input type="file" id="main-file-file-input" class="dropify" data-max-file-size="30M"/>
                <input type="hidden" name="main-file" id="main-file" value=""/>
                <div id="progress-main-file" class="progress mb-3 mt-3 d-none">
                    <div id="progressbar-main-file" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"></div>
                </div>

                <div class="mt-2">
                    <a class="btn btn-success" href="#">
                        <i class="fa fa-upload"></i>
                        Sign in to enjoy 2GB max file size!
                    </a>
                    <a id="copyButton" class="btn btn-warning text-white" data-toggle="tooltip" data-original-title="copied!" data-trigger="click" data-clipboard-target="#main-file" data-clipboard-action="copy">Copy Link</a>
                    <a id="openButton" class="btn btn-primary" href="#" target="_blank">Open in new page</a>
                    <a id="codeButton" class="btn btn-primary ml-2" data-toggle="modal" data-target="#qr-modal">QR Code</a>
                </div>
            </div>
            <label class="w-100 mt-3 mb-0">
                By uploading, you agree that your file will be public and can be downloaded by anyone.
            </label>
        </div>
    </div>
</main>

<div class="modal fade" id="qr-modal" tabindex="-1" role="dialog" aria-labelledby="qrModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR Code</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">?</span>
                </button>
            </div>
            <div class="modal-body">
                @*TODO: Developer will be merged to Directory!*@
                <img class="img-fluid" id="qr-img" src="/qrcode-build"/>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Pricing</h1>
        <p class="lead">Quickly upload anything to share it with anyone. Create a one-time link to share a secret file and view log to statistic file download times.</p>
    </div>

    <div class="card-deck mb-3 text-center">
