                    <li>
                        <i class="fa fa-check text-success"></i>
                        30Mb file size limit
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        30 days limit
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        All files public
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        No download log
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        No custom domain
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        Shared storage with others
                    </li>
                </ul>
                <button onclick="window.scrollTo(0, 0)" class="btn btn-lg btn-block btn-outline-primary">Upload now</button>
            </div>
        </div>
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Sign up</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$0</h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>
                        <i class="fa fa-check text-success"></i>
                        2GB file size limit
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        365 days limit
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        Private site supported
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        No download log
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        No custom domain
                    </li>
                    <li>
                        <i class="fa fa-times text-danger"></i>
                        Your personal storage
                    </li>
                </ul>
                <a href="#" class="btn btn-lg btn-block btn-secondary">Sign in</a>
            </div>
        </div>
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">VIP</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$0.1 <small class="text-muted">/ mo / GB</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>
                        <i class="fa fa-check text-success"></i>
                        No file size limit
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        No time limit
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        Private site supported
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        Download logs
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        Desktop App supported
                    </li>
                    <li>
                        <i class="fa fa-check text-success"></i>
                        Multiple customizable storage
                    </li>
                </ul>
                <a href="https://nextcloud.aiursoft.cn" class="btn btn-lg btn-block btn-success">Get started</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        new ClipboardJS('#copyButton');
    </script>
    <script type="module">
        import Uploader from "/scripts/uploader.js";

        const copyButton = $('#copyButton');
        const openButton = $('#openButton');
        const codeButton = $('#codeButton');
        const qrImage = $('#qr-img');
        const updateButtons = function () {
            var downloadPath = $("[name=main-file]").attr('value');
            if (downloadPath && downloadPath.length > 0) {
                copyButton.show();
                openButton.show();
                codeButton.show();
                openButton.attr('href', downloadPath);
                qrImage.attr('src', '/qrcode-build?source=' + encodeURI(downloadPath));
            } else {
                copyButton.hide();
                openButton.hide();
                codeButton.hide();
            }
        };
        updateButtons();
        
        const fileInput = $(`#main-file-file-input`);
        const progress = $(`#progress-main-file`);
        const progressbar = $(`#progressbar-main-file`);
        const addressInput = $(`[name=main-file]`);

        new Uploader({
            fileInput: fileInput,
            progress: progress,
            progressbar: progressbar,
            addressInput: addressInput,
            sizeInMb: 30,
            validExtensions: '',
            uploadUrl: '/upload',
            onUploaded: updateButtons,
            onReset: updateButtons
        }).init();
    </script>
}